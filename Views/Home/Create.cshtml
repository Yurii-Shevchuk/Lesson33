@model Lesson_33_MVC.DTO.CreateContactDto
@{
  ViewData["Title"] = "Create New Contact";
}

<h1 class="text-center">Create new contact</h1>
<div class="text-center">
  <form action="/api/contacts" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label asp-for="FirstName">First Name</label>
      <input asp-for="FirstName" class="form-control" />
      <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="LastName">Last Name</label>
      <input asp-for="LastName" class="form-control" />
      <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Phone">Phone</label>
      <input asp-for="Phone" class="form-control" />
      <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Address">Address</label>
      <input asp-for="Address" class="form-control" />
      <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="AvatarFile">Avatar</label>
      <input asp-for="AvatarFile" type="file" class="form-control" />
      <span asp-validation-for="AvatarFile" class="text-danger"></span>
    </div>

    <div class="d-flex flex-row gap-2 justify-content-evenly mt-4">
      <button type="submit" class="btn btn-primary">
        <img src="/images/icon-done.png" class="me-2" />
        Create
      </button>

      <button type="reset" class="btn btn-primary d-flex align-items-center">
        <img src="/images/icon-reset.png" class="me-2" />
        Reset All
      </button>
    </div>
  </form>
</div>
